{
    "name": "orbitrondev/oauth2-orbitrondev",
    "description": "OrbitronDev OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "type": "library",
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "orbitrondev"
    ],
    "autoload": {
        "psr-4": {
            "OrbitronDev\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OrbitronDev\\OAuth2\\Client\\Test\\": "test/src/"
        }
    },
    "require": {
        "league/oauth2-client": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3.2",
        "mockery/mockery": "^1.0",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Manuele Vaccari",
            "email": "manuele.vaccari@gmail.com",
            "homepage": "https://github.com/D3strukt0r"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "check": "phpcs --standard=psr2 -sp src/",
        "test": "phpunit",
        "upload-coveralls": "php-coveralls -v",
        "upload-scrutinizer": [
            "wget https://scrutinizer-ci.com/ocular.phar",
            "php ocular.phar code-coverage:upload --format=php-clover build/logs/clover.xml"
        ]
    }
}
