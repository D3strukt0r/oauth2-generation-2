{
    "name": "d3strukt0r/oauth2-openid",
    "description": "OpenID OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "type": "library",
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "openid"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Manuele Vaccari",
            "email": "manuele.vaccari@gmail.com",
            "homepage": "https://github.com/D3strukt0r",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "manuele.vaccari@gmail.com",
        "issues": "https://github.com/D3strukt0r/oauth2-openid/issues",
        "wiki": "https://github.com/D3strukt0r/oauth2-openid/wiki",
        "source": "https://github.com/D3strukt0r/oauth2-openid",
        "docs": "https://oauth2-openid.readthedocs.io"
    },
    "require": {
        "php": ">=7.1",
        "ext-date": "*",
        "league/oauth2-client": "^2.4"
    },
    "require-dev": {
        "ext-json": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "0.6.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpcompatibility/php-compatibility": "*",
        "phpunit/phpunit": "^9 || ^8 || ^7",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "D3strukt0r\\OAuth2\\Client\\Provider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "D3strukt0r\\OAuth2\\Client\\Provider\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpcs",
        "check2": "php-cs-fixer fix --diff --dry-run -v",
        "fix": "phpcbf",
        "fix2": "php-cs-fixer fix"
    },
    "archive": {
        "exclude": [
            "/.idea",
            "/build",
            "/docs",
            "/tests",
            ".editorconfig",
            ".gitignore",
            ".php_cs.dist",
            ".phpcs.xml",
            ".readthedocs.yml",
            ".scrutinizer.yml",
            "CONTRIBUTING.md",
            "phpunit.xml.dist",
            "README.md"
        ]
    }
}
