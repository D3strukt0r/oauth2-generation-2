{
    "name": "generation-2/oauth2-generation-2",
    "description": "Generation 2 OAuth 2.0 Client Provider for The PHP League OAuth2-Client",
    "type": "library",
    "keywords": [
        "oauth",
        "oauth2",
        "client",
        "authorization",
        "authorisation",
        "generation-2"
    ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Manuele Vaccari",
            "email": "manuele.vaccari@gmail.com",
            "homepage": "https://github.com/D3strukt0r",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "manuele.vaccari@gmail.com",
        "issues": "https://github.com/D3strukt0r/oauth2-generation-2/issues",
        "wiki": "https://github.com/D3strukt0r/oauth2-generation-2/wiki",
        "source": "https://github.com/D3strukt0r/oauth2-generation-2",
        "docs": "https://oauth2-generation-2-docs.manuele-vaccari.ch/en/stable/"
    },
    "require": {
        "php": ">=7.1",
        "league/oauth2-client": "^2.3"
    },
    "require-dev": {
        "ext-json": "*",
        "friendsofphp/php-cs-fixer": "^2.16",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9 || ^8 || ^7",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Generation2\\OAuth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Generation2\\OAuth2\\Client\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "check": [
            "phpcs",
            "php-cs-fixer fix --diff --dry-run -v"
        ],
        "fix": [
            "phpcbf",
            "php-cs-fixer fix"
        ]
    }
}
